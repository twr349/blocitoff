<%= form_for [current_user, @item] do |f| %>
  <div class="form-group">
    <h3><label for="name">Add a to do's</label></h3>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter item name" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>