<div class="row">
  <div class="col-md-12 showMain">   
      <h1>7 Days Todo</h1>
      <h2> Welcome <%= current_user.email %>  <%=link_to image_tag(current_user.avatar_url(48)), "http://www.gravatar.com/" %></h2>
      
      <%= render partial: "items/form" %>
  </div>

  <% @items.in_groups_of(4) do |group| %>
    <div class="row">
      <% group.each do |item| %>
        <div class="col-md-3">
          <h2><%= render item if item %></h2>
        </div>
      <% end %>
    </div>
  <% end %>
</div>